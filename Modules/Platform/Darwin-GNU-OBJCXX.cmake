include(Platform/Darwin-GNU)
__darwin_compiler_gnu(OBJCXX)
cmake_gnu_set_sysroot_flag(OBJCXX)
cmake_gnu_set_osx_deployment_target_flag(OBJCXX)

set(CMAKE_OBJCXX_FLAGS_INIT "")
set(CMAKE_OBJCXX_FLAGS_DEBUG_INIT "-g")
